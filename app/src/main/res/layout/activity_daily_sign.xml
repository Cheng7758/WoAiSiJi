<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_layout"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_190"
        android:background="@drawable/bg_daily_sign">

        <RelativeLayout
            android:id="@+id/rl_daily_sign_click"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_90"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/daily_sign_button"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_35"
                android:gravity="center_horizontal"
                android:layout_centerInParent="true"
                android:text="签到"
                android:textSize="@dimen/sp_20" />

            <View
                android:id="@+id/view_horizonal_line"
                android:layout_width="@dimen/dp_70"
                android:layout_height="@dimen/dp_1"
                android:visibility="gone"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_75"
                android:background="#ff0000" />

           <!-- <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view_horizonal_line"
                android:layout_marginTop="6dp"
                android:visibility="gone"
                android:gravity="center_horizontal"
                android:text="连续2天" />-->
        </RelativeLayout>
        <View
            android:layout_width="@dimen/dp_344"
            android:layout_height="@dimen/dp_5"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_38"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@drawable/bg_daily_sign_line" />

        <LinearLayout
            android:id="@+id/rl_daily_sign_mark"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_66"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_daily_sign_icon01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:visibility="invisible"
                    android:src="@drawable/already_daily_sign_mark02"/>
                <TextView
                    android:id="@+id/tv_daily_sign_icon01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_6"
                    android:layout_gravity="center_horizontal"
                    android:drawableTop="@drawable/daily_sign_mark"
                    android:text="12.30"
                    android:textSize="@dimen/sp_14"/>

            </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_daily_sign_icon02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:visibility="invisible"
                android:src="@drawable/already_daily_sign_mark02"/>
            <TextView
                android:id="@+id/tv_daily_sign_icon02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_gravity="center_horizontal"
                android:drawableTop="@drawable/daily_sign_mark"
                android:text="12.30"
                android:textSize="@dimen/sp_14"/>
           </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_daily_sign_icon03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:visibility="invisible"
                    android:src="@drawable/already_daily_sign_mark02"/>
                <TextView
                    android:id="@+id/tv_daily_sign_icon03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_6"

                    android:layout_gravity="center_horizontal"
                    android:drawableTop="@drawable/daily_sign_mark"
                    android:text="12.30"
                    android:textSize="@dimen/sp_14"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_daily_sign_icon04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:visibility="invisible"
                    android:src="@drawable/already_daily_sign_mark02"/>
                <TextView
                    android:id="@+id/tv_daily_sign_icon04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_6"
                    android:layout_gravity="center_horizontal"
                    android:drawableTop="@drawable/daily_sign_mark"
                    android:text="12.30"
                    android:textSize="@dimen/sp_14"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_daily_sign_icon05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:visibility="invisible"
                    android:src="@drawable/already_daily_sign_mark02"/>
                <TextView
                    android:id="@+id/tv_daily_sign_icon05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_6"
                    android:layout_gravity="center_horizontal"
                    android:drawableTop="@drawable/daily_sign_mark"
                    android:text="12.30"
                    android:textSize="@dimen/sp_14"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_daily_sign_icon06"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:visibility="invisible"
                    android:src="@drawable/already_daily_sign_mark02"/>
                <TextView
                    android:id="@+id/tv_daily_sign_icon06"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_6"
                    android:layout_gravity="center_horizontal"
                    android:drawableTop="@drawable/daily_sign_mark"
                    android:text="12.30"
                    android:textSize="@dimen/sp_14"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_daily_sign_icon07"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:visibility="invisible"
                    android:src="@drawable/already_daily_sign_mark02"/>
                <TextView
                    android:id="@+id/tv_daily_sign_icon07"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_6"
                    android:layout_gravity="center_horizontal"
                    android:drawableTop="@drawable/daily_sign_mark"
                    android:text="12.30"
                    android:textSize="@dimen/sp_14"/>
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="-110dp">
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"/>
            <WebView
                android:id="@+id/wv_weather_reveal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></WebView>
        </LinearLayout>

    </ScrollView>

</LinearLayout>