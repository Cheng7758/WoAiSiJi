<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:background="#ffffff"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".activity.send.JoinAutoDetailsActivity">

        <include layout="@layout/title_bar_view_layout" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_20"
            android:orientation="horizontal">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/iv_join_us_detail_merchant_picture"
                android:layout_width="@dimen/dp_120"
                android:layout_height="@dimen/dp_120"
                android:src="@drawable/icon_loading"
                android:scaleType="fitXY"/>
            <TextView
                android:layout_marginLeft="@dimen/dp_10"
                android:id="@+id/tv_join_us_detail_merchant_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_16"
                android:textColor="#000"
                android:text=""/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#ececec"/>
        <LinearLayout
            android:padding="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/iv_join_us_detail_merchant_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_join_us_merchant_position"/>

            <LinearLayout
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_join_us_detail_merchant_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="@dimen/sp_18"
                    android:text=""/>
                <TextView
                    android:layout_marginTop="@dimen/dp_5"
                    android:id="@+id/tv_join_us_detail_merchant_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#919191"
                    android:text="(距离1.5KM)"/>
            </LinearLayout>
            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="match_parent"
                android:background="#ececec"/>
            <ImageView
                android:layout_marginLeft="@dimen/dp_15"
                android:id="@+id/iv_join_us_detail_merchant_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_join_us_merchant_phone"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#ececec"/>
        <TextView
            android:layout_margin="@dimen/dp_15"
            android:id="@+id/tv_join_us_detail_merchant_introduction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/dp_8"
            android:gravity="left"
            android:textSize="@dimen/sp_16"
            android:text=""
            android:textColor="#2a2a2a"/>
    </LinearLayout>
</ScrollView>