<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.zhanghao.woaisiji.activity.merchant.MerchantPayActivity">

    <include layout="@layout/title_bar_view_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_40"
        android:background="@color/lightgrey"
        android:orientation="vertical"
        android:padding="@dimen/dp_40">

        <TextView
            android:id="@+id/member_gold_points"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="会员金积分：000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="输入支付金额" />

            <EditText
                android:id="@+id/input_pay_money"
                android:layout_width="@dimen/dp_130"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_5"
                android:inputType="number"
                android:layout_marginLeft="@dimen/dp_6"
                android:background="@color/darkgray" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_confirm_payment"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginTop="@dimen/dp_50"
            android:background="@drawable/bg_round_green_color"
            android:gravity="center"
            android:text="确定支付"
            android:textColor="#fff"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_buy_gold_points"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginTop="@dimen/dp_40"
            android:background="@drawable/bg_round_green_color"
            android:gravity="center"
            android:text="去购买金积分"
            android:textColor="#fff"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>

</LinearLayout>
