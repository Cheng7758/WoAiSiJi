<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context=".activity.PaymentMainActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:background="@color/bg_payment_gray"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">
        <!--title-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="支付确认"
                android:textColor="#000"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv_payment_main_exist"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/umeng_update_close_bg_normal" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <!--需要支付的金币-->
        <TextView
            android:id="@+id/tv_payment_main_need_pay_gold_jifen"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="2"
            android:drawableLeft="@drawable/meiyuanfu"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center"
            android:text=""
            android:textColor="#000"
            android:textSize="28dp"
            android:textStyle="bold" />
        <!--android:drawableLeft="@drawable/home_my_page_gold_jifen"-->
        <!--android:drawablePadding="15dp"-->
        <!--支付方式-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:orientation="vertical">
            <!--现金支付-->
            <RelativeLayout
                android:id="@+id/rl_payment_main_cash_payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/payment_cach"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:text="现金支付"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_payment_main_cash_payment_select"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/checkbox_uncheck" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eee" />
            <!--金积分支付-->
            <RelativeLayout
                android:id="@+id/rl_payment_main_gold_jifen_payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/home_my_page_gold_jifen"
                    android:drawablePadding="10dp"
                    android:text="金积分支付"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_payment_main_gold_jifen_payment_select"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/checkbox_uncheck" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eee" />
            <!--银积分支付-->
            <RelativeLayout
                android:id="@+id/rl_payment_main_sliver_jifen_payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/ic_personal_my_wallet_silver_integral"
                    android:drawablePadding="10dp"
                    android:text="银积分支付"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_payment_main_sliver_jifen_payment_select"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/checkbox_uncheck" />
            </RelativeLayout>
        </LinearLayout>
        <!--优惠券-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text="优惠券：满1000积分减200积分" />

        <!--确认支付-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_payment_main_submit_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_round_green_color"
                android:gravity="center_vertical"
                android:paddingBottom="12dp"
                android:paddingLeft="80dp"
                android:paddingRight="80dp"
                android:paddingTop="12dp"
                android:text="确定支付"
                android:textColor="#fff" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>