<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0EFF4"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <include layout="@layout/title_register"/>

        <Button
            android:id="@+id/btn_lottery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:text="抽奖"
            android:textColor="#ffffff"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="13dp"
        android:background="#CBCBCB"/>

    <RelativeLayout
        android:id="@+id/rl_user_head"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:background="#ffffff"
        android:layout_gravity="center_vertical">

        <com.example.zhanghao.woaisiji.view.RoundImageView
            android:id="@+id/iv_head"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/ic_fubaihui" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/iv_head"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_user_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:text="司机"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_user_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="5dp"
                android:text="1234567890000"
                android:textColor="#F0794D"
                android:textSize="14sp" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/ib_enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="25dp"
            android:background="@null"
            android:src="@drawable/iv_enter" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#CBCBCB"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginTop="16dp"
        android:background="#CBCBCB"/>
    <LinearLayout
        android:id="@+id/ll_my_friends"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="58dp"
        android:background="@color/colorWhite"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="18dp"
            android:scaleType="fitXY"
            android:layout_marginLeft="13dp"
            android:src="@drawable/personal_friends"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:text="我的好友"
            android:textColor="#000000"
            android:textSize="14sp"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:background="@null"
            android:src="@drawable/iv_enter"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1.8dp"
        android:background="#CBCBCB"/>
    <LinearLayout
        android:id="@+id/ll_collection"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="58dp"
        android:background="@color/colorWhite"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="18dp"
            android:scaleType="fitXY"
            android:layout_marginLeft="13dp"
            android:src="@drawable/personal_collection"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:text="收藏"
            android:textColor="#000000"
            android:textSize="14sp"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:background="@null"
            android:src="@drawable/iv_enter"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1.8dp"
        android:background="#CBCBCB"/>
    <LinearLayout
        android:id="@+id/ll_my_wallet"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="58dp"
        android:background="@color/colorWhite"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="18dp"
            android:scaleType="fitXY"
            android:layout_marginLeft="13dp"
            android:src="@drawable/personal_wallet"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:text="钱包"
            android:textColor="#000000"
            android:textSize="14sp"/>
        <ImageButton
            android:id="@+id/ib_personal_wallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:background="@null"
            android:src="@drawable/iv_enter"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1.8dp"
        android:background="#CBCBCB"/>
    <LinearLayout
        android:id="@+id/ll_my_order_form"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="58dp"
        android:background="@color/colorWhite"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="18dp"
            android:scaleType="fitXY"
            android:layout_marginLeft="13dp"
            android:src="@drawable/icon04"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:text="我的订单"
            android:textColor="#000000"
            android:textSize="14sp"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:background="@null"
            android:src="@drawable/iv_enter"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1.8dp"
        android:background="#CBCBCB"/>
    <LinearLayout
        android:id="@+id/ll_setting"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="58dp"
        android:background="@color/colorWhite"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="18dp"
            android:scaleType="fitXY"
            android:layout_marginLeft="13dp"
            android:src="@drawable/personal_setting"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:text="设置"
            android:textColor="#000000"
            android:textSize="14sp"/>
        <ImageButton
            android:id="@+id/ib_personal_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:background="@null"
            android:src="@drawable/iv_enter"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#CBCBCB"/>

</LinearLayout>
