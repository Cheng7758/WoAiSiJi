<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/rl_head_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_200"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/iv_dynamic_bg"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_200"
                    android:scaleType="centerCrop"
                    android:src="@drawable/dynamic_bg" />
                <com.example.zhanghao.woaisiji.view.RoundImageView
                    android:id="@+id/riv_info_detail"
                    android:layout_width="@dimen/dp_66"
                    android:layout_height="@dimen/dp_66"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_centerInParent="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_fubaihui" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:gravity="center_vertical">

                    <Button
                        android:id="@+id/btn_detail_info_back"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_30"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:drawableLeft="@drawable/back"
                        android:gravity="center_vertical"
                        android:text="返回"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp_18" />

                    <TextView
                        android:id="@+id/tv_detail_info_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center_vertical"
                        android:text="编辑资料"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_24" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_30"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:visibility="gone"
                        android:background="@null"
                        android:gravity="center"
                        android:text="更多"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_18" />

                </RelativeLayout>

            </RelativeLayout>
            <LinearLayout
                android:id="@+id/ll_detail_info_left01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_8"
                android:paddingBottom="@dimen/dp_8"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_detail_info_left01"
                    android:layout_marginLeft="@dimen/dp_10"
                    style="@style/my_personal_detail_info_left"  />
                <TextView
                    android:id="@+id/tv_detail_info_right01"
                    style="@style/my_personal_detail_info_right" />
                <ImageView
                    android:id="@+id/iv_detail_info_edit01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_8"
                    android:visibility="gone"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/iv_enter"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#CBCBCB"/>
            <LinearLayout
                android:id="@+id/ll_detail_info_left02"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_detail_info_left02"
                    style="@style/my_personal_detail_info_left"  />
                <TextView
                    android:id="@+id/tv_detail_info_right02"
                    style="@style/my_personal_detail_info_right"
                    android:singleLine="true"
                    android:ellipsize="end"/>
                <ImageView
                    android:id="@+id/iv_detail_info_edit02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_8"
                    android:visibility="gone"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/iv_enter"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#CBCBCB"/>
            <LinearLayout
                android:id="@+id/ll_detail_info_left03"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_detail_info_left03"
                    style="@style/my_personal_detail_info_left"  />
                <TextView
                    android:id="@+id/tv_detail_info_right03"
                    style="@style/my_personal_detail_info_right" />
                <ImageView
                    android:id="@+id/iv_detail_info_edit03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_8"
                    android:visibility="gone"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/iv_enter"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#CBCBCB"/>
            <LinearLayout
                android:id="@+id/ll_detail_info_left04"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_detail_info_left04"
                    style="@style/my_personal_detail_info_left"  />
                <TextView
                    android:id="@+id/tv_detail_info_right04"
                    style="@style/my_personal_detail_info_right" />
                <ImageView
                    android:id="@+id/iv_detail_info_edit04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_8"
                    android:visibility="gone"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/iv_enter"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#CBCBCB"/>
            <LinearLayout
                android:id="@+id/ll_detail_info_left05"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_detail_info_left05"
                    style="@style/my_personal_detail_info_left"  />
                <TextView
                    android:id="@+id/tv_detail_info_right05"
                    style="@style/my_personal_detail_info_right" />
                <ImageView
                    android:id="@+id/iv_detail_info_edit05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_8"
                    android:visibility="gone"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/iv_enter"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#CBCBCB"/>
            <LinearLayout
                android:id="@+id/ll_detail_info_left06"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_detail_info_left06"
                    style="@style/my_personal_detail_info_left"  />
                <TextView
                    android:id="@+id/tv_detail_info_right06"
                    style="@style/my_personal_detail_info_right" />
                <ImageView
                    android:id="@+id/iv_detail_info_edit06"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_8"
                    android:visibility="gone"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/iv_enter"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#CBCBCB"/>
            <LinearLayout
                android:id="@+id/ll_detail_info_left07"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_detail_info_left07"
                    style="@style/my_personal_detail_info_left"  />
                <TextView
                    android:id="@+id/tv_detail_info_right07"
                    style="@style/my_personal_detail_info_right" />
                <ImageView
                    android:id="@+id/iv_detail_info_edit07"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_8"
                    android:visibility="gone"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/iv_enter"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#CBCBCB"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:visibility="gone"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_detail_info_left23"
                    style="@style/my_personal_detail_info_left"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/tv_detail_info_right23"
                    style="@style/my_personal_detail_info_right"
                    android:visibility="gone"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="#474747"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/btn_info_detail_greet"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_22"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_shape_white_bg"
            android:text="打招呼"
            android:textSize="@dimen/dp_10"
            android:textColor="@color/white"/>
        <Button
            android:id="@+id/btn_info_detail_add_friend"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_22"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/btn_shape_white_bg"
            android:text="加好友"
            android:textSize="@dimen/dp_10"
            android:textColor="@color/white"/>
    </RelativeLayout>

</RelativeLayout>