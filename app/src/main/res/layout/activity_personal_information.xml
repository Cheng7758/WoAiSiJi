<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:orientation="vertical">

    <include layout="@layout/title_personal" />

    <LinearLayout
        android:id="@+id/ll_information_sex"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_36"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/dp_80"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:text="性别"
            android:textSize="@dimen/sp_14"
            android:textColor="#000025"/>

        <TextView
            android:id="@+id/tv_info_sex"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="男" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@null"
            android:src="@drawable/iv_enter" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="#CBCBCB" />
    <LinearLayout
        android:id="@+id/ll_information_birthday"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_36"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/dp_80"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:text="生日"
            android:textSize="@dimen/sp_14"
            android:textColor="#000025"/>

        <TextView
            android:id="@+id/tv_info_birth_day"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1992-02-02" />
        <ImageButton
            android:id="@+id/ib_personal_birthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@null"
            android:src="@drawable/iv_enter" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#CBCBCB" />

    <LinearLayout
        android:id="@+id/ll_information_age"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_36"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/dp_80"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:text="年龄"
            android:textSize="@dimen/sp_14"
            android:textColor="#000025"/>

        <TextView
            android:id="@+id/tv_info_age"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="23" />

        <ImageButton
            android:id="@+id/ib_user_ni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:visibility="gone"
            android:background="@null"
            android:src="@drawable/iv_enter" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#CBCBCB" />
    <LinearLayout
        android:id="@+id/ll_information_constellation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_36"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/dp_80"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:text="星座"
            android:textSize="@dimen/sp_14"
            android:textColor="#000025"/>

        <TextView
            android:id="@+id/tv_info_constellation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="水平座" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@null"
            android:visibility="gone"
            android:src="@drawable/iv_enter" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#CBCBCB" />

    <LinearLayout
        android:id="@+id/ll_information_mobile"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_36"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/dp_80"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:text="电话"
            android:textSize="@dimen/sp_14"
            android:textColor="#000025"/>

        <TextView
            android:id="@+id/tv_info_mobile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="18888888888" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="#CBCBCB" />

    <LinearLayout
        android:id="@+id/ll_information_marriage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_36"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/dp_80"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:text="婚姻"
            android:textSize="@dimen/sp_14"
            android:textColor="#000025"/>

        <TextView
            android:id="@+id/tv_info_marry"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="已婚" />
        <ImageButton
            android:id="@+id/ib_personal_marry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@null"
            android:src="@drawable/iv_enter" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#CBCBCB" />
    <LinearLayout
        android:id="@+id/ll_information_mon_income"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_36"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/dp_80"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:text="月收入"
            android:textSize="@dimen/sp_14"
            android:textColor="#000025"/>

        <TextView
            android:id="@+id/tv_info_mon_income"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="5000" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@null"
            android:src="@drawable/iv_enter" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#CBCBCB" />
    <LinearLayout
        android:id="@+id/ll_information_education"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_36"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/dp_80"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:text="教育程度"
            android:textSize="@dimen/sp_14"
            android:textColor="#000025"/>

        <TextView
            android:id="@+id/tv_info_education"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="硕士" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@null"
            android:src="@drawable/iv_enter" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#CBCBCB" />
    <LinearLayout
        android:id="@+id/ll_information_location"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_36"
        android:visibility="gone"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/dp_80"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:text="所在地" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="北京市-朝阳区" />
        <ImageButton
            android:id="@+id/ib_personal_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@null"
            android:src="@drawable/iv_enter" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="#CBCBCB" />
    <LinearLayout
        android:id="@+id/ll_information_hometown"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_36"
        android:background="@color/colorWhite"
        android:visibility="gone"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/dp_80"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="故乡" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="河北-邢台" />
        <ImageButton
            android:id="@+id/ib_personal_hometown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@null"
            android:src="@drawable/iv_enter" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="#CBCBCB" />

</LinearLayout>