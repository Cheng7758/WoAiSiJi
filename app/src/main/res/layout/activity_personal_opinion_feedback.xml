<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0EFF4"
    android:orientation="vertical">

    <include layout="@layout/title_bar_view_layout" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/em_seabar_input"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edit_personal_opinion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:padding="10dp"
            android:hint="请填写您的宝贵意见"
            android:textSize="16sp"
            />
    </LinearLayout>

    <Button
        android:id="@+id/btn_submit_opinion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/bg_rectangle_green_color"
        android:text="提交意见"
        android:textSize="20sp"
        android:textColor="@color/white"/>

</LinearLayout>