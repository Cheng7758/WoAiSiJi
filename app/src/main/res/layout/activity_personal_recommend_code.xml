<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="#f2f2f2"
    android:orientation="vertical"
    tools:context=".activity.PersonalRecommendCodeActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >


    <include
        layout="@layout/title_bar_view_layout"/>

    <ImageView
        android:layout_marginTop="10dp"
        android:id="@+id/iv_personal_recommendation_code_hv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/icon_loading"/>

    <TextView
        android:id="@+id/tv_personal_recommendation_code_nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text=""
        android:textColor="#333"
        android:textSize="18dp" />

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/tv_personal_recommendation_code_referrer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#333"
        android:textSize="14dp"
        android:text=""/>


    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/text_color_recommend_code">
        <!--金积分-->
        <LinearLayout
            android:id="@+id/ll_personal_recommendation_code_my_invitation_code"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_personal_recommend_code_my_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="#fff"
                android:text=""/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="#fff"
                android:text="我的邀请码"/>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#fff"/>

        <LinearLayout
            android:id="@+id/ll_personal_recommendation_code_merchant_recommend_code"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="#fff"
                android:text="商家推荐码"/>
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#fff"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/text_color_recommend_code">
        <!--商家金积分-->
        <LinearLayout
            android:id="@+id/ll_personal_recommendation_code_vip_recommend_code"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="#fff"
                android:text="会员推荐码"/>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#fff"/>
        <!--银积分-->
        <LinearLayout
            android:id="@+id/ll_personal_recommendation_code_merchant_payment_code"
            android:paddingTop="35dp"
            android:paddingBottom="35dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="#fff"
                android:text="商家支付码"/>
        </LinearLayout>
    </LinearLayout>
<!--ll_personal_recommendation_code_vip_recommend_code-->


    </LinearLayout>



    </ScrollView>
</LinearLayout>