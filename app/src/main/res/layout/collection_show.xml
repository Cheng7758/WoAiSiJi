<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <ImageView
        android:id="@+id/collection_img"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_fubaihui" />

    <TextView
        android:id="@+id/collection_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@+id/collection_img"
        android:layout_toRightOf="@+id/collection_img"
        android:text="标题标题" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="3dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/collection_img"
        android:layout_toRightOf="@+id/collection_img"
        android:layout_alignBottom="@id/collection_img"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="标题"
            android:textColor="#FF0000" />

        <TextView
            android:id="@+id/sorts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/home_my_page_gold_jifen"
            android:text="标题"
            android:drawablePadding="3dp"
            android:textColor="#FF8000" />

        <TextView
            android:id="@+id/silver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:drawableLeft="@drawable/home_my_page_sliver_jifen"
            android:text="标题"
            android:drawablePadding="3dp"
            android:textColor="#808080" />

        <TextView
            android:id="@+id/see_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="#E5E5E5"
            android:gravity="center"
            android:text="查看详情" />
    </LinearLayout>

</RelativeLayout>
