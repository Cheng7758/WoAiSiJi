<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FAFAFA"
    android:padding="5dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_item_fbh_store_detail_shangpintu"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="fitXY"
        android:src="@drawable/weixianshi" />

    <TextView
        android:id="@+id/tv_item_fbh_store_detail_introduce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:text="热卖OPPO正品水晶mp3可爱mp3"
        android:textColor="#474747"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_item_fbh_store_detail_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="8dp"
            android:text="999"
            android:textColor="#FB6A2D"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_item_fbh_store_detail_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:text="74人付款"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>