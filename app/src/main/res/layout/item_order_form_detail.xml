<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_10"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:src="@drawable/weixianshi"
            android:scaleType="fitXY"
            android:id="@+id/iv_order_detail_picture" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_80"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_order_detail_title"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_20"
                android:padding="@dimen/dp_5"
                android:layout_weight="1"
                android:text="商品名称"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/tv_order_detail_goodcel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:textColor="#ff0000"
                android:text="0"
                android:layout_below="@+id/Stock" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_5"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_order_detail_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="价格"/>
            <TextView
                android:id="@+id/tv_order_detail_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:text="数量"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_3"
        android:gravity="end">
        <Button
            android:id="@+id/btn_order_form_appraise"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@color/white"
            android:text="评价"
            android:textSize="@dimen/sp_12"/>
        <Button
            android:id="@+id/btn_order_form_apply_refund"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@color/white"
            android:text="申请退货"
            android:textSize="@dimen/sp_12"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#cbcbcb"/>

</LinearLayout>