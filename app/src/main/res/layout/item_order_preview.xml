<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="#fff">
    <ImageView
        android:id="@+id/iv_item_order_preview_good_picture"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/weixianshi"
        android:scaleType="fitXY"
         />
    <LinearLayout
        android:layout_toRightOf="@+id/iv_item_order_preview_good_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_item_order_preview_good_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="2"
            android:ellipsize="end"
            android:text=""
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/tv_item_order_preview_good_coupon"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="优惠券"/>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_item_order_preview_good_price"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="#FF4305"
                android:text="￥98"/>
            <TextView
                android:id="@+id/tv_item_order_preview_good_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="×0"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>