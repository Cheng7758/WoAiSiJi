<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item_personal_harvest_address_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_personal_harvest_address_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="姓名"
            android:textColor="#504D4D" />

        <TextView
            android:id="@+id/tv_item_personal_harvest_address_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电话"
            android:textColor="#504D4D" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_item_personal_harvest_address_detail_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="北京北京市朝阳区"
        android:textColor="#504D4D" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="#CBCBCB" />

    <LinearLayout
        android:id="@+id/ll_item_personal_harvest_address_select_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <CheckBox
            android:id="@+id/ck_item_personal_harvest_address_selected_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:checked="false"
            android:drawableLeft="@drawable/bg_login_checkbox_selector"
            android:drawablePadding="10dp"
            android:lines="1"
            android:text="默认地址"
            android:textColor="#504D4D"
            android:textSize="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_item_personal_harvest_address_edit_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableLeft="@drawable/harvest_address_icon02"
            android:drawablePadding="5dp"
            android:text="编辑"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_item_personal_harvest_address_delete_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:drawableLeft="@drawable/harvest_address_icon03"
            android:drawablePadding="5dp"
            android:text="删除"
            android:textSize="12dp" />
    </LinearLayout>
</LinearLayout>