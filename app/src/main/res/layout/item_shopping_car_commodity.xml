<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_15"
    android:layout_marginRight="@dimen/dp_15"
    android:paddingTop="@dimen/dp_13"
    android:paddingBottom="@dimen/dp_13"
    android:orientation="horizontal"
    android:background="@drawable/bg_round_white_color">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/cb_shopping_car_store_choose_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:button="@drawable/bg_check_box_shopping_car_commodity"
            android:checked="false"/>
        <TextView
            android:layout_marginLeft="@dimen/dp_10"
            android:id="@+id/tv_shopping_car_store_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_fbh_store"
            android:drawableRight="@drawable/ic_arrow_right"
            android:text="商城"
            android:textSize="@dimen/sp_16"
            android:drawablePadding="@dimen/dp_10"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:id="@+id/couponContainer"

        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:textColor="#0000ff"
            android:layout_height="wrap_content"
            android:text="优惠券"
            android:id="@+id/coupon"
            />
    </LinearLayout>

</LinearLayout>