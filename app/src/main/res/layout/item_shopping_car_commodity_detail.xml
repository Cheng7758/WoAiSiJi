<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_18"
    android:layout_marginRight="@dimen/dp_18"
    android:gravity="center"
    android:background="#fff">
    <CheckBox
        android:id="@+id/cb_shopping_car_commodity_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_10"
        android:button="@drawable/bg_check_box_shopping_car_commodity"/>
    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/iv_shopping_car_commodity_detail"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/dp_5"
        android:background="@drawable/weixianshi"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/dp_5"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_shopping_car_commodity_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1"
            android:text=""
            android:textSize="@dimen/dp_16"
            android:textColor="#000"
            android:ellipsize="end"
            android:lines="1"/>
        <!--库存-->
        <TextView
            android:id="@+id/tv_shopping_car_commodity_inventory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="库存100"
            android:textSize="@dimen/dp_14"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:id="@+id/tv_shopping_car_commodity_price"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:text="￥999"
                android:textSize="@dimen/dp_15"
                android:textColor="@color/red"/>
            <LinearLayout
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="right|center_vertical">
                <TextView
                    android:id="@+id/tv_shopping_car_commodity_amount_reduce"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:background="@drawable/bg_rectangle_border"
                    android:gravity="center"
                    android:text="—" />
                <EditText
                    android:id="@+id/et_shopping_car_commodity_number"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_20"
                    android:inputType="number"
                    android:text=""
                    android:gravity="center"
                    android:background="#fff"/>
                <TextView
                    android:id="@+id/tv_shopping_car_commodity_amount_add"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:background="@drawable/bg_rectangle_border"
                    android:gravity="center"
                    android:text="+"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>