<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp">
    <ImageView
        android:id="@+id/iv_app_mall_icon"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:src="@drawable/demo01"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_app_mall_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="视频播放"
            android:textSize="20sp"
            android:textColor="#000"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="3dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_app_mall_classify01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="在线视频"/>
            <TextView
                android:id="@+id/tv_app_mall_classify02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="直播"/>
            <TextView
                android:id="@+id/tv_app_mall_classify03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="真人视频"/>
        </LinearLayout>
    </LinearLayout>
    <ImageButton
        android:id="@+id/ib_app_mall_enter"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:layout_marginRight="18dp"
        android:layout_gravity="center_vertical"
        android:scaleType="fitXY"
        android:background="@null"
        android:src="@drawable/iv_enter"/>

</LinearLayout>