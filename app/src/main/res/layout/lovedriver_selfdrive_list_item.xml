<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dp_8"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_80"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_travel_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1"
            android:textColor="#000000"
            android:text="jfapojufapowsgfjakslgjfalosfkjdpoaskfjglkajsdlgkjesal"
            android:textSize="@dimen/sp_18"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_travel_headpic"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:src="@drawable/ease_ic_launcher"/>
            <TextView
                android:id="@+id/tv_travel_nick_name"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_26"
                android:layout_marginLeft="@dimen/dp_8"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:background="@null"
                android:text="走起了..."
                android:textSize="@dimen/sp_10"/>
            <TextView
                android:id="@+id/tv_travel_read"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/tv_read"
                android:gravity="center_vertical"
                android:textSize="@dimen/sp_14"
                android:text="6359"/>
            <TextView
                android:id="@+id/tv_travel_praise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dp_5"
                android:drawableLeft="@drawable/tv_praise"
                android:gravity="center_vertical"
                android:text="365"
                android:textSize="@dimen/sp_14"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80">
        <ImageView
            android:id="@+id/iv_travel_default"
            android:layout_width="@dimen/dp_66"
            android:layout_height="@dimen/dp_66"
            android:layout_centerInParent="true"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/ic_fubaihui" />
    </RelativeLayout>

</LinearLayout>