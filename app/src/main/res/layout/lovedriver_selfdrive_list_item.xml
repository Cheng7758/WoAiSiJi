<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_travel_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="#000000"
            android:text="jfapojufapowsgfjakslgjfalosfkjdpoaskfjglkajsdlgkjesal"
            android:textSize="18sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_travel_headpic"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ease_ic_launcher"/>
            <TextView
                android:id="@+id/tv_travel_nick_name"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:background="@null"
                android:text="走起了..."
                android:textSize="10sp"/>
            <TextView
                android:id="@+id/tv_travel_read"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/tv_read"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:text="6359"/>
            <TextView
                android:id="@+id/tv_travel_praise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="5dp"
                android:drawableLeft="@drawable/tv_praise"
                android:gravity="center_vertical"
                android:text="365"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="80dp"
        android:layout_height="80dp">
        <ImageView
            android:id="@+id/iv_travel_default"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_centerInParent="true"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/ic_fubaihui" />
    </RelativeLayout>

</LinearLayout>