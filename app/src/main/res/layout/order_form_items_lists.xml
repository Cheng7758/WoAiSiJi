<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_order_form_enter_detail"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="#F5F5F5"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_order_form_icon"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center_vertical"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_order_form_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:maxLines="2"
            android:text="商品名称"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/tv_order_form_golds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="金币"
            android:textColor="#ff0000"/>

        <TextView
            android:id="@+id/tv_order_form_silvers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="银币"
            android:textColor="#ff0000"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_order_form_original_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="现价"/>

        <TextView
            android:id="@+id/tv_order_form_current_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_order_form_goods_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>