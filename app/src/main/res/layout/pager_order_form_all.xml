<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.zhanghao.woaisiji.refresh.PullToRefreshLayout
        android:id="@+id/refresh_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/refresh_head" />
        <!-- 支持所有实现Pullable接口的View -->
        <com.example.zhanghao.woaisiji.refresh.BaseListView
            android:id="@+id/lv_order_form_all_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:dividerHeight="@dimen/dp_8"></com.example.zhanghao.woaisiji.refresh.BaseListView>

       <include layout="@layout/load_more" />

    </com.example.zhanghao.woaisiji.refresh.PullToRefreshLayout>
</LinearLayout>