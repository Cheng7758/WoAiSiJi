<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:id="@+id/ll_my_answer_adopt_status"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_my_answer_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="谁有睡在我上铺的兄弟啊（白白）"
        android:textColor="#323232"
        android:textSize="18dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_my_answer_adopt_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="12dp"
            android:text="待采纳"
            android:textColor="#F67800"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_my_answer_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="回答：3"
            android:textSize="16dp" />

        <View
            android:id="@+id/view"
            android:layout_width="2dp"
            android:layout_height="22dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#D7D7D7"
            />

        <TextView
            android:id="@+id/tv_my_answer_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="12dp"
            android:text="1小时前"
            android:textSize="16dp" />
    </LinearLayout>



</LinearLayout>
