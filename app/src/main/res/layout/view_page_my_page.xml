            <!--我的推荐-->
            <RelativeLayout
                android:id="@+id/rl_home_my_page_mid_recommend"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
