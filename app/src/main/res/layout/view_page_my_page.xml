            <!--优惠券-->
            <RelativeLayout
                android:id="@+id/rl_home_my_page_mid_coupon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <TextView
                    style="@style/my_page_mid_integral_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_16"
                    android:drawableLeft="@drawable/home_my_page_mid_coupon"
                    android:text="优惠券" />

                <TextView
                    style="@style/my_page_mid_integral_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawableRight="@drawable/ic_arrow_right"/>
            </RelativeLayout>
            <!--设置-->
            <RelativeLayout
                android:id="@+id/rl_home_my_page_mid_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <TextView
                    style="@style/my_page_mid_integral_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_16"
                    android:drawableLeft="@drawable/home_my_page_mid_setting"
                    android:text="设  置" />

                <TextView
                    style="@style/my_page_mid_integral_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawableRight="@drawable/ic_arrow_right" />
            </RelativeLayout>
            <!--客服-->
            <RelativeLayout
                android:id="@+id/rl_home_my_page_mid_kefu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <TextView
                    style="@style/my_page_mid_integral_style"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/sp_16"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/home_my_page_mid_kefu"
