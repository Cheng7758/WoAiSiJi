                <TextView
                    style="@style/my_page_mid_integral_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawableRight="@drawable/ic_arrow_right" />
